---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Leo Personal Blog' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --font-system: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
                       Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        --font-mono: ui-monospace, Menlo, Monaco, 'Cascadia Code', 'Source Code Pro',
                     Consolas, 'Courier New', monospace;
        --color-bg: #ffffff;
        --color-text: #000000;
        --color-border: #000000;
        --color-hover: #333333;
        --spacing-xs: 0.5rem;
        --spacing-sm: 1rem;
        --spacing-md: 1.5rem;
        --spacing-lg: 2rem;
        --spacing-xl: 3rem;
      }

      body {
        font-family: var(--font-system);
        background: var(--color-bg);
        color: var(--color-text);
        line-height: 1.6;
        padding: var(--spacing-md);
        max-width: 800px;
        margin: 0 auto;
      }

      a {
        color: var(--color-text);
        text-decoration: none;
        border-bottom: 1px solid var(--color-text);
      }

      a:hover {
        color: var(--color-hover);
        border-bottom-color: var(--color-hover);
      }

      h1, h2, h3, h4, h5, h6 {
        margin: var(--spacing-lg) 0 var(--spacing-sm);
        font-weight: 600;
        line-height: 1.2;
      }

      h1 {
        font-size: 2.5rem;
        margin-top: 0;
      }

      h2 {
        font-size: 1.75rem;
      }

      h3 {
        font-size: 1.25rem;
      }

      p {
        margin-bottom: var(--spacing-sm);
      }

      code {
        font-family: var(--font-mono);
        background: #f5f5f5;
        padding: 0.125rem 0.25rem;
        border: 1px solid #e0e0e0;
        border-radius: 2px;
        font-size: 0.9em;
      }

      pre {
        background: #f5f5f5;
        border: 1px solid #e0e0e0;
        padding: var(--spacing-sm);
        overflow-x: auto;
        margin: var(--spacing-sm) 0;
      }

      pre code {
        background: none;
        border: none;
        padding: 0;
      }

      ul, ol {
        margin-left: var(--spacing-lg);
        margin-bottom: var(--spacing-sm);
      }

      hr {
        border: none;
        border-top: 1px solid var(--color-border);
        margin: var(--spacing-lg) 0;
      }

      button {
        font-family: var(--font-system);
        background: var(--color-bg);
        color: var(--color-text);
        border: 1px solid var(--color-border);
        padding: var(--spacing-xs) var(--spacing-sm);
        cursor: pointer;
        font-size: 0.9rem;
      }

      button:hover {
        background: var(--color-text);
        color: var(--color-bg);
      }

      input, textarea {
        font-family: var(--font-system);
        background: var(--color-bg);
        color: var(--color-text);
        border: 1px solid var(--color-border);
        padding: var(--spacing-xs) var(--spacing-sm);
        font-size: 1rem;
        width: 100%;
      }

      input:focus, textarea:focus {
        outline: 2px solid var(--color-text);
        outline-offset: 2px;
      }
    </style>
  </head>
  <body>
    <header>
      <nav style="border-bottom: 1px solid var(--color-border); padding-bottom: var(--spacing-sm); margin-bottom: var(--spacing-lg);">
        <a href="/" style="border: none; font-weight: 600; font-size: 1.2rem;">Leo's Blog</a>
        <span style="margin: 0 var(--spacing-sm);">|</span>
        <a href="/about" style="border: none;">About</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer style="border-top: 1px solid var(--color-border); margin-top: var(--spacing-xl); padding-top: var(--spacing-lg); text-align: center; font-size: 0.9rem;">
      <p>&copy; {new Date().getFullYear()} Leo's Blog</p>
    </footer>
  </body>
</html>
